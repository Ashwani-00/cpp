#include<bits/stdc++.h>
using namespace std;
int main(){
    int n=4;
    int arr[n][n]={{1,3,4,7},{8,4,2,1},{13,12,1,3},{4,7,8,1}};
    int x=n*n;
    cout<<"Spiral matrix:"<<endl;
    int st=0,end=n-1,left=0,right=n-1;
    while(st<=end  && left<=right){
        for(int i=left;i<=right;i++){
            cout<<arr[st][i]<<" ";
        }
        st++;
        for(int i=st;i<=end;i++){
            cout<<arr[i][right]<<" ";
        }
        right--;
        for(int i=right;i>=left;i--){
            cout<<arr[end][i]<<" ";
        }
        end--;
        for(int i=end;i>=st;i--){
            cout<<arr[i][left]<<" ";
        }
        left++;
    }

    return 0;
}
